pipeline {
	 agent any

	 environment {
	 	     VENV_DIR = 'venv'
	 }

	 stages {
	 	stage('Checkout') {
				  steps {
				  	git credentialsId: '', url: '', branch: 'main'
				  }
		}

		stage('Install Dependencies') {
			       steps {
			       	     sh 'python3 -m venv $VENV_DIR'
				     sh './VENV_DIR/bin/pip install'
			       }
		}
	 }
}