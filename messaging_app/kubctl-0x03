do
  curl -s http://localhost:8000/ > /dev/null && echo "âœ… Request $i: OK" || echo "âŒ Request $i: Failed"
  sleep 1
done

echo "ğŸ“¦ Current running pods:"
kubectl get pods -l app=messaging-app,version=blue
